groups:[],
params:[{"Name":"embed_html","Value":"\u0026lt;blockquote class=\"twitter-tweet\"\u0026gt;\u0026lt;p lang=\"en\" dir=\"ltr\"\u0026gt;The administration has a historic opportunity to support \u0026lt;a href=\"https://twitter.com/hashtag/DRC?src=hash\u0026amp;ref_src=twsrc%5Etfw\"\u0026gt;#DRC\u0026lt;/a\u0026gt; in reforming structural challenges like curbing high-level corruption \u0026amp; ending systematic violence against the \u0026lt;a href=\"https://twitter.com/hashtag/Congolese?src=hash\u0026amp;ref_src=twsrc%5Etfw\"\u0026gt;#Congolese\u0026lt;/a\u0026gt; people. My bipartisan letter with @SenateMenendez \u0026amp; 7 others:\u0026lt;a href=\"https://t.co/OyX2cZGxPB\"\u0026gt;https://t.co/OyX2cZGxPB\u0026lt;/a\u0026gt; \u0026lt;a href=\"https://twitter.com/hashtag/PP4PP?src=hash\u0026amp;ref_src=twsrc%5Etfw\"\u0026gt;#PP4PP\u0026lt;/a\u0026gt;\u0026lt;/p\u0026gt;‚Äî U.S. Senate Foreign Relations Committee (@SenateForeign) \u0026lt;a href=\"https://twitter.com/SenateForeign/status/1295474962795462660?ref_src=twsrc%5Etfw\"\u0026gt;August 17, 2020\u0026lt;/a\u0026gt;\u0026lt;/blockquote\u0026gt;||data-pangea-embed::\"true\"","DefaultValue":"","HtmlEncode":false,"Type":"HTML"}],
